-# frozen_string_literal: true
= simple_form_for(@lesson) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    /= f.input :content
    = f.label :content
    = f.rich_text_area :content
    /= f.association :course
    -# = this piece of code lets me fill in the association provided there is a parameter at all, and is kept hidden.
    -# = good thing to note for the future
    = f.input :course_id, input_html: {value: @lesson.course_id || params[:course_id]}, as: :hidden


  .form-actions
    = f.button :submit
